


<h1>Advice Listings</h1><br />



<%= render 'adviceposts/advicepostssearch' %>



<table class="table table-striped">
  <tr>
    <th>User</th>
    <th>User Name</th>    
    <th>Category ID</th>
    <th>Category Name</th>
    <th>Miniresume</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @adviceposts.each do |advicepost| %>
  <tr>
	
    <td><%= advicepost.user_id %></td>
	<td><%= advicepost.user.name %></td>
    <td><%= advicepost.category_id %></td>
    <td><%= advicepost.category.categoryname %></td>    
    <td><%= advicepost.miniresume %></td>
    <td>$<%= advicepost.price %></td>
    <td><%= link_to 'View Listing', advicepost %></td>
    <td><%= link_to 'Edit', edit_advicepost_path(advicepost) %></td>
    <td><%= link_to 'Remove Listing', advicepost, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

