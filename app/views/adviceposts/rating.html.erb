

<h1>Rate Advisor's Message</h1><br />


<h2>Rate Advisor's Message</h2><br />


<%= form_for(@advicepost) do |f| %>
  	
  <div class="field">
    <%= f.hidden_field :advisor_id %>
  </div>

  <div class="field">
    <%= f.hidden_field :score %>
  </div>

<div class="field">
<%= radio_button_tag(:score_select, "Up") %>
<%= label_tag(:score_select, "Good, I'm satisfied.") %>
<%= radio_button_tag(:score_select, "Down")%>
<%= label_tag(:score_select, "Bad, I'm unsatisfied.")%>
</div>


<%= f.fields_for :messages, @message do |builder| %>
	<fieldset>
		<%= builder.hidden_field :status %>
	<fieldset>
<% end %>

	

  <br />
  <div class="actions">
	<%= link_to 'Back', :back, :class => 'btn' %>
    <%= f.submit 'Rate!', :class => 'btn', class: "btn btn-success" %>
  </div>
 
<% end %>


<br /><br />
<%= debug @advicepost %>
<%= debug @message %>

