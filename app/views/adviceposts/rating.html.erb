

<h1>Rate Advisor's Message</h1><br />



<%= form_for(@advicepost) do |f| %>

  	
  <div class="field">
    <%= f.hidden_field :advisor_id %>
  </div>



  <div class="field">
	<strong><%= f.label "Score" %></strong>
    <%= f.text_field :score %>
  </div>

<h2>Rate Advisor's Message</h2><br />


  <br />
  <div class="actions">
	<%= link_to 'Back', :back, :class => 'btn' %>
    <%= f.submit 'Rate!', :class => 'btn', class: "btn btn-success" %>

  </div>
  
<% end %>

<%= debug @advicepost %>
<%= debug @message %>

