<h1>Listing messages</h1>

<table>
  <tr>
    <th>User</th>
    <th>Advisor</th>
    <th>Advicepost</th>
    <th>Thread</th>
    <th>Messageq</th>
    <th>Messager</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.user_id %></td>
    <td><%= message.advisor_id %></td>
    <td><%= message.advicepost_id %></td>
    <td><%= message.thread %></td>
    <td><%= message.messageq %></td>
    <td><%= message.messager %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

