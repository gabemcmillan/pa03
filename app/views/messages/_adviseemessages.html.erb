

<h2>Active Advisee Messages</h2>

<table class="table table-striped">
  <tr>
	<th></th>
    <th></th>
    <th>UserID</th>
    <th>AdvisorID</th>
    <th>AdvicepostID</th>
    <th>Category Name</th>
	<th>Advisor Name</th>
    <th>Message</th>
    <th>Response</th>
    <th>Created On</th>
    <th></th>

  </tr>

<% @messages.each do |message| %>
  <tr>
	<td><%= link_to 'Respond!', messager_path(message), class: "btn btn-success" %></td>
	<td><%= link_to 'View', message %></td>
    <td><%= message.user_id %></td>
    <td><%= message.advisor_id %></td>
    <td><%= message.advicepost_id %></td>
    <td><%= message.advicepost.categoryname %></td>
    <td><%= message.advicepost.user.name %></td>
    <td><%= message.messageq %></td>
    <td><%= message.messager %></td>
	<td><%= message.created_at %></td>

  </tr>
<% end %>
</table>

