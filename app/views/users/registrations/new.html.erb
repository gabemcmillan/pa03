<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
	<%= f.input :first_name, :required => true, :autofocus => true, label: "First Name" %>
	<%= f.input :last_name, :required => true, :autofocus => true, label: "Last Name" %>

	<%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :zip, :required => true, :autofocus => true %>
    
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
  </div>


  <div class="actions">
	<%= link_to 'Back', :back, :class => 'btn' %>
    <%= f.button :submit, "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "links" %>


