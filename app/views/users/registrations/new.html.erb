<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
	<%= f.input :first_name, :required => true, :autofocus => true, label: "First Name" %>
	<%= f.input :last_name, :required => true, :autofocus => true, label: "Last Name" %>

	<%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :zip, :required => true, :autofocus => true %>
    
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>

	<%= f.input :agree_emails, :required => true, label: "Agree to receive email notifications.", :hint => "Email notifications are required to ensure Advisors are notified immediately when a new Advisee message has been send." %>



By clicking Continue, you agree to our Terms of Use and Privacy Policy. <br /><br />

  </div>

  <div class="actions">
    <%= f.button :submit, "Continue", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "links" %>


