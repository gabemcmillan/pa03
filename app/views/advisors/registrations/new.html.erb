<h2>Create Advisor Account</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :firstname, :required => true, :autofocus => true %>
	<%= f.input :lastname, :required => true, :autofocus => true %>
	<%= f.input :address, :required => true, :autofocus => true %>
	<%= f.input :address2, :required => false, :autofocus => true %>
	<%= f.input :city, :required => true, :autofocus => true %>
	<%= f.input :state, :required => true, :autofocus => true %>
	<%= f.input :zip, :required => true, :autofocus => true %>
	<%= f.input :birthday, :required => true, :autofocus => true %>
	<%= f.input :gender, :required => false, :autofocus => true %>	
	
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
